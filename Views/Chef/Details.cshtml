@model TarifDefteri.Models.Recipe
@{
    ViewData["Title"] = Model.Title;
    var averageRating = ViewBag.AverageRating as double? ?? 0;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Başlık ve Butonlar -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">@Model.Title</h2>
                    <p class="text-muted mb-0">
                        <i class="bi bi-calendar"></i> @Model.CreatedDate.ToString("dd MMMM yyyy")
                    </p>
                </div>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-pencil"></i> Düzenle
                    </a>
                    <button type="button" class="btn btn-danger" 
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Geri
                    </a>
                </div>
            </div>

            <!-- İstatistik Kartları -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-eye fs-1 text-primary mb-2 d-block"></i>
                            <h3 class="mb-1">@Model.ViewCount</h3>
                            <small class="text-muted">Görüntülenme</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-chat-dots fs-1 text-success mb-2 d-block"></i>
                            <h3 class="mb-1">@Model.Comments.Count</h3>
                            <small class="text-muted">Yorum</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-star-fill fs-1 text-warning mb-2 d-block"></i>
                            <h3 class="mb-1">@averageRating.ToString("0.0")</h3>
                            <small class="text-muted">Ortalama Puan</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-people fs-1 text-info mb-2 d-block"></i>
                            <h3 class="mb-1">@Model.Ratings.Count</h3>
                            <small class="text-muted">Puan Veren</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarif Detayları -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-4" alt="@Model.Title" />
                    }

                    <div class="mb-4">
                        <span class="badge bg-primary me-2">@Model.Category.Name</span>
                        <span class="badge bg-info">
                            <i class="bi bi-clock"></i> @Model.PreparationTime dakika
                        </span>
                    </div>

                    <h5 class="fw-bold mb-3">Açıklama</h5>
                    <p class="text-muted mb-4">@Model.Description</p>

                    <h5 class="fw-bold mb-3">Malzemeler</h5>
                    <ul class="mb-4">
                        @foreach (var ingredient in Model.Ingredients.Split(','))
                        {
                            <li>@ingredient.Trim()</li>
                        }
                    </ul>

                    <h5 class="fw-bold mb-3">Yapılışı</h5>
                    <div style="white-space: pre-line;">@Model.Instructions</div>
                </div>
            </div>

            <!-- Yorumlar -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Yorumlar (@Model.Comments.Count)</h5>
                    
                    @if (Model.Comments.Any())
                    {
                        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedDate))
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong><i class="bi bi-person-circle"></i> @comment.User.Username</strong>
                                    <small class="text-muted">@comment.CreatedDate.ToString("dd MMM yyyy HH:mm")</small>
                                </div>
                                <p class="mb-0 text-muted">@comment.Text</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted mb-0">Henüz yorum yapılmamış.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tarifi Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>@Model.Title</strong> tarifini silmek istediğinize emin misiniz?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    Bu işlem geri alınamaz!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    İptal
                </button>
                <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>