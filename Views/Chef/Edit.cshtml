@model TarifDefteri.Models.Recipe
@{
    ViewData["Title"] = "Tarif Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Başlık -->
            <div class="mb-4">
                <h2 class="fw-bold mb-1">✏️ Tarif Düzenle</h2>
                <p class="text-muted">Tarif bilgilerini güncelleyin</p>
            </div>

            <!-- Form Kartı -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-4">
                            <!-- Sol Kolon -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Title" class="form-label fw-semibold">
                                        <i class="bi bi-card-heading"></i> Tarif Adı
                                    </label>
                                    <input asp-for="Title" class="form-control form-control-lg" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-semibold">
                                        <i class="bi bi-tag"></i> Kategori
                                    </label>
                                    <select asp-for="CategoryId" class="form-select form-select-lg" required>
                                        @foreach (var category in ViewBag.Categories as List<TarifDefteri.Models.Category>)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="PreparationTime" class="form-label fw-semibold">
                                        <i class="bi bi-clock"></i> Hazırlama Süresi (Dakika)
                                    </label>
                                    <input asp-for="PreparationTime" type="number" class="form-control form-control-lg" 
                                           min="1" required />
                                    <span asp-validation-for="PreparationTime" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ImageUrl" class="form-label fw-semibold">
                                        <i class="bi bi-image"></i> Görsel URL (Opsiyonel)
                                    </label>
                                    <input asp-for="ImageUrl" type="url" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Sağ Kolon -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label fw-semibold">
                                        <i class="bi bi-file-text"></i> Açıklama
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Ingredients" class="form-label fw-semibold">
                                        <i class="bi bi-basket"></i> Malzemeler
                                    </label>
                                    <textarea asp-for="Ingredients" class="form-control" rows="6" required></textarea>
                                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Tam Genişlik -->
                            <div class="col-12">
                                <div class="mb-4">
                                    <label asp-for="Instructions" class="form-label fw-semibold">
                                        <i class="bi bi-list-ol"></i> Yapılışı (Adım Adım)
                                    </label>
                                    <textarea asp-for="Instructions" class="form-control" rows="8" required></textarea>
                                    <span asp-validation-for="Instructions" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}