@model TarifDefteri.Models.Category
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Başlık -->
            <div class="mb-4">
                <h2 class="fw-bold mb-1">✏️ Kategori Düzenle</h2>
                <p class="text-muted">Kategori bilgilerini güncelleyin</p>
            </div>

            <!-- Form Kartı -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="post" asp-action="EditCategory" asp-route-id="@Model.Id">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-tag"></i> Kategori Adı
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-file-text"></i> Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Categories" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}