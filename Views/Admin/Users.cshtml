@model List<TarifDefteri.Models.User>
@{
    ViewData["Title"] = "KullanÄ±cÄ± YÃ¶netimi";
}

<div class="container-fluid">
    <!-- BaÅŸlÄ±k -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">ðŸ‘¥ KullanÄ±cÄ± YÃ¶netimi</h2>
                    <p class="text-muted">TÃ¼m kullanÄ±cÄ±larÄ± gÃ¶rÃ¼ntÃ¼leyin ve yÃ¶netin</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Dashboard'a DÃ¶n
                </a>
            </div>
        </div>
    </div>

    <!-- Bildirimler -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- KullanÄ±cÄ± Ä°statistikleri -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Toplam KullanÄ±cÄ±</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count</h3>
                        </div>
                        <i class="bi bi-people fs-1 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Admin</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(u => u.Role == "Admin")</h3>
                        </div>
                        <i class="bi bi-shield-check fs-1 text-danger opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Chef</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(u => u.Role == "Chef")</h3>
                        </div>
                        <i class="bi bi-patch-check fs-1 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">KullanÄ±cÄ±</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(u => u.Role == "User")</h3>
                        </div>
                        <i class="bi bi-person fs-1 text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KullanÄ±cÄ± Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th class="py-3">KullanÄ±cÄ± AdÄ±</th>
                            <th class="py-3">Ad Soyad</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Rol</th>
                            <th class="py-3 text-center">Durum</th>
                            <th class="py-3 text-center">Tarif SayÄ±sÄ±</th>
                            <th class="py-3 text-center">Yorum SayÄ±sÄ±</th>
                            <th class="py-3">KayÄ±t Tarihi</th>
                            <th class="py-3 text-end pe-4">Ä°ÅŸlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-4 align-middle">
                                    <span class="badge bg-secondary">@user.Id</span>
                                </td>
                                <td class="align-middle">
                                    <strong>@user.Username</strong>
                                </td>
                                <td class="align-middle">
                                    @user.FullName
                                </td>
                                <td class="align-middle">
                                    <small class="text-muted">@user.Email</small>
                                </td>
                                <td class="align-middle">
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-check"></i> Admin
                                        </span>
                                    }
                                    else if (user.Role == "Chef")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-patch-check"></i> Chef
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-person"></i> User
                                        </span>
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    @if (user.IsApproved)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> OnaylÄ±
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Bekliyor
                                        </span>
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    <span class="badge bg-primary">@user.Recipes.Count</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="badge bg-warning text-dark">@user.Comments.Count</span>
                                </td>
                                <td class="align-middle">
                                    <small class="text-muted">@user.CreatedDate.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td class="align-middle text-end pe-4">
                                    <div class="btn-group" role="group">
                                        @if (!user.IsApproved)
                                        {
                                            <form method="post" asp-action="ApproveUser" asp-route-id="@user.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-check-circle"></i> Onayla
                                                </button>
                                            </form>
                                        }
                                        else if (user.Role != "User")
                                        {
                                            <form method="post" asp-action="RejectUser" asp-route-id="@user.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-x-circle"></i> OnayÄ± KaldÄ±r
                                                </button>
                                            </form>
                                        }
                                        
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal@(user.Id)"
                                                @(user.Id == ViewBag.UserId ? "disabled" : "")>
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <!-- Silme Onay Modal -->
                            <div class="modal fade" id="deleteModal@(user.Id)" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">KullanÄ±cÄ±yÄ± Sil</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p><strong>@user.Username (@user.FullName)</strong> kullanÄ±cÄ±sÄ±nÄ± silmek istediÄŸinize emin misiniz?</p>
                                            @if (user.Recipes.Any() || user.Comments.Any())
                                            {
                                                <div class="alert alert-warning mb-0">
                                                    <i class="bi bi-exclamation-triangle"></i>
                                                    Bu kullanÄ±cÄ±nÄ±n <strong>@user.Recipes.Count tarif</strong> ve 
                                                    <strong>@user.Comments.Count yorumu</strong> var! Hepsi silinecek.
                                                </div>
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                Ä°ptal
                                            </button>
                                            <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id" 
                                                  class="d-inline">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash"></i> Evet, Sil
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>