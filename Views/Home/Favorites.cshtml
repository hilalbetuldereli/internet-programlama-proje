@model List<TarifDefteri.Models.Favorite>
@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container-fluid">
    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">❤️ Favorilerim</h2>
                    <p class="text-muted">Beğendiğiniz tarifleri buradan takip edin</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Favori Listesi -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var favorite in Model)
            {
                var recipe = favorite.Recipe;
                var avgRating = recipe.Ratings.Any() ? recipe.Ratings.Average(r => r.Score) : 0;
                
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden hover-card">
                        <!-- Resim -->
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                            {
                                <img src="@recipe.ImageUrl" class="card-img-top h-100 w-100" 
                                     style="object-fit: cover;" alt="@recipe.Title" />
                            }
                            else
                            {
                                <div class="bg-gradient h-100 d-flex align-items-center justify-content-center" 
                                     style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                    <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                                </div>
                            }
                            
                            <span class="position-absolute top-0 start-0 m-2 badge bg-dark bg-opacity-75">
                                @recipe.Category.Name
                            </span>

                            <!-- Favorilerden Çıkar Butonu -->
                            <form method="post" asp-action="ToggleFavorite" asp-route-recipeId="@recipe.Id" 
                                  class="position-absolute top-0 end-0 m-2">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-heart-fill"></i>
                                </button>
                            </form>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-2">@recipe.Title</h5>
                            <p class="card-text text-muted small mb-3" style="height: 40px; overflow: hidden;">
                                @recipe.Description
                            </p>

                            <!-- İstatistikler -->
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @recipe.PreparationTime dk
                                    </small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="bi bi-eye"></i> @recipe.ViewCount görüntülenme
                                    </small>
                                </div>
                            </div>

                            <div class="mb-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    @if (i <= avgRating)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                }
                                <small class="text-muted ms-1">(@recipe.Ratings.Count)</small>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-person-circle"></i> @recipe.User.Username
                                </small>
                                <small class="text-muted">
                                    <i class="bi bi-calendar-heart"></i> @favorite.AddedDate.ToString("dd.MM.yyyy")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <a asp-action="Details" asp-route-id="@recipe.Id" 
                               class="btn btn-primary w-100 rounded-3">
                                <i class="bi bi-eye"></i> Tarifi Gör
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-heart fs-1 text-muted mb-3 d-block"></i>
                <h4 class="mb-3">Henüz favori eklemediniz</h4>
                <p class="text-muted mb-4">Beğendiğiniz tarifleri favorilere ekleyerek buradan kolayca ulaşabilirsiniz.</p>
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-search"></i> Tarifleri Keşfet
                </a>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2) !important;
        }
    </style>
}